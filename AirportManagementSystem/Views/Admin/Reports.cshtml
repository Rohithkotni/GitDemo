
@{
    ViewBag.Title = "Reports";
}

@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Reports</h2>

@using (Html.BeginForm("Reports", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Reports", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Reports", new SelectList(new List<string> { "ListOfSchedule", "ListOfHangar", "ListOfPlane" }), "Select-Report", htmlAttributes: new { @class = "form-control", @Name = "report" })
                @Html.ValidationMessage("Reports", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>

    </div>
}