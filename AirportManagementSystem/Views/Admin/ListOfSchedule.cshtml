@model IEnumerable<AirportManagementSystem.Models.Schedule>

@{
    ViewBag.Title = "ListOfSchedule";


}

@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
@if (Session["user"] == null)
{
    <br />
    <h4>@Html.ActionLink("Please Login Again", "Admin", "Home")</h4>

}
else
{

    <h2>ListOfSchedule</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllocatedPlaneId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllocatedPilotId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduleDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduleTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllocatedPlaneId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllocatedPilotId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditSchedule", new { id = item.ID }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.ScheduleId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ScheduleId })*@
                </td>
            </tr>
        }

    </table>
}
